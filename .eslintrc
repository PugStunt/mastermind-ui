{
  "extends": "eslint:recommended",
  "plugins": [],
  "env": {
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "angular": true,
    "module": true,
    "inject": true,
    "bard": true
  },
  "rules": {
    ## Possible Errors
    "comma-dangle": [2, "never"],
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-func-assign": 0,
    "no-inner-declarations": 0,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    # "no-obj-calls": 2
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 0,
    "use-isnan": 2,
    "valid-jsdoc": 0,

    ## Best Practices
    "accessor-pairs": 0,
    "array-callback-return": 0,
    "block-scoped-var": 0,
    "complexity": [2, 20],
    "consistent-return": 0,
    "curly": [1, "multi-or-nest", "consistent"],
    "default-case": 0,
    "dot-location": [2, "property"],
    "dot-notation": [2, { "allowKeywords": false }],
    "eqeqeq": 2,
    "guard-for-in": 0,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-div-regex": 0,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 0,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 0,
    #"no-implicit-globals": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-labels": 0,
    "no-lone-blocks": 2,
    "no-loop-func": 1,
    "no-magic-numbers": [2, { "ignore": [-1, 0, 1] }],
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-proto": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 1,
    "no-param-reassign": 1,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    #"no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 0,
    "no-throw-literal": 2,
    #"no-unmodified-loop-condition": 2,
    "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
    #"no-unused-labels": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-warning-comments": 1,
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 1,

    ## Variables
    "no-catch-shadow": 2,
    "no-label-var": 2,
    "no-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,

    ## Stylistic Issues
    "array-bracket-spacing": [2, "never"],
    "block-spacing": [2, "always"],
    "brace-style": 2,
    "camelcase": 2,
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "consistent-this": 0,
    "eol-last": 2,
    "func-names": 0,
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "id-length": 1,
    "indent": [2, 2],
    "jsx-quotes": [2, "prefer-double"],
    "key-spacing": [2, { "afterColon": true, "beforeColon": false }],
    "keyword-spacing": [0, {
      "after": true,
      "before": true,
      "overrides": {
        "if": { "after": false },
        "for": { "after": false },
        "while": { "after": false },
        "function": { "after": false }
      }
    }],
    "linebreak-style": 1,
    "lines-around-comment": 0,
    "max-depth": [2, 4],
    "max-len": [2, 120],
    "max-nested-callbacks": [2, 3],
    "max-params": [1, 3],
    "max-statements": 0,
    "max-statements-per-line": 0,
    "new-cap": 1,
    "new-parens": 2,
    "newline-after-var": 1,
    "newline-before-return": 0,
    #"newline-per-chained-call": [2, {"ignoreChainWithDepth": 3}],
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-multiple-empty-lines": [2, { "max": 2 }],
    "no-negated-condition": 2,
    "no-nested-ternary": 2,
    "no-new-object": 1,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    #"no-whitespace-before-property": 2,
    #"one-var-declaration-per-line": 2,
    "quote-props": 0,
    "quotes": [2, "single"],
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }]
  }
}
